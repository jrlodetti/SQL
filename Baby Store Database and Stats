--Create a baby clothing store data base

CREATE TABLE baby_store (id INTEGER PRIMARY KEY, name TEXT, price INTEGER, size INTEGER, colour TEXT, items_sold INTEGER);

INSERT INTO baby_store VALUES (1, "Shirt", 20, 3, "white", 200); 
