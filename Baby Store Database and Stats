--display the database ordered by price.
SELECT * FROM baby_store ORDER BY price;

--which blue items sold more than 100 units?
SELECT * FROM baby_store WHERE items_sold > 100 AND colour = "blue";

--what is the value of the most expensive item?
SELECT MAX(price) FROM baby_store;

--Which items cost $50 or more?
SELECT items_sold, name FROM baby_store WHERE price >= 50;

--what is the total number of items sold?
SELECT sum(items_sold) FROM baby_store;
